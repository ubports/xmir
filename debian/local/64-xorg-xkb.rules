ACTION!="add|change", GOTO="xorg_xkb_end"
SUBSYSTEM!="input", GOTO="xorg_xkb_end"
KERNEL!="event*", GOTO="xorg_xkb_end"

# input_id is only in udev > 147
ENV{ID_INPUT}=="", IMPORT{program}="/lib/udev/input_id %p"

# import keyboard layout from /etc/default/keyboard
ENV{ID_INPUT_KEY}=="?*", IMPORT{file}="/etc/default/console-setup"

LABEL="xorg_xkb_end"
